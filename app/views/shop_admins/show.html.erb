<div id="glb_main">
  <div id="glb_body" class="clearfix">
    <div id="glb_header">
      <%= render partial: "partial/header_top" %>
    </div>
    <div id="content_container">
      <div id="show_content">
        <% @shop_infos.each do |shop_info|%>
          <div class="top_photo">
          </div>
          <div class="top_content">
            <div class="left_content">
              <div class="like_content">
                <div class="like_btn">
                  <%= link_to "編集",  edit_shop_admin_shop_info_path(current_shop_admin.id, shop_info.id), local: true %>
                </div>
              </div>
              <div class="shop_tit">
                <%= shop_info.store_name%>
              </div>
              <div class="shop_address">
                <%= shop_info.address%>
              </div>
              <div class="shop_text">
                <%= shop_info.caption %>
              </div>
            </div>
          <% end %>
          <div class="right_content">
            <%= render partial: "posts/scroll_menu"%>
          </div>
        </div>
        <div class=bottom_content>
          <div class="tab_content">
            <ul class="shop_menu">
              <li>
                <a id="about" class="menu_item active">メニュー</a>
              </li>
              <li>
                <a id="service" class="menu_item">お店からのコメント</a>
              </li>
              <li>
                <a id="contact" class="menu_item">口コミ</a>
              </li>
            </ul>
            <ul class="menu_details">
              <li class="menu_detail show">
                <% @menus.each do |menu| %>
                  <div class="menu_detail_container">
                    <% if menu.photo %>
                      <%= image_tag menu.photo.image.url %>
                    <% end %>
                    <div class="menu_tit">
                      <%= menu.name %>
                    </div>
                    <div class="menu_price">
                      <%= menu.price %>
                    </div>
                    <div class="menu_word">
                      <%= menu.caption %>
                    </div>
                  </div>
                <% end %>
              </li>
              <li class="menu_detail">
                <% @shop_commitments.each do |shop_commitment| %>
                  <div class="shop_commnet_container">
                    <div class="comment_tit">
                      こだわり
                    </div>
                    <div class="comment_main">
                      <div class="comment_photo">
                        <% if shop_commitment.commitment_photo %>
                          <%= image_tag shop_commitment.commitment_photo.image.url %>
                        <% end %>
                      </div>
                      <div class="comment">
                        <%= shop_commitment.text%>
                      </div>
                    </div>
                  <% end%>
                </div>
              </li>

              <li class="menu_detail">
                <div class="review_container">
                  <div class="review_top">
                    <div class="cases_box">
                      <div class="cases_display">
                      全3件
                      </div>
                      <select name="example">
                        <option value="サンプル1">標準</option>
  
                        <option value="サンプル2">いいねの多い順</option>
                      </select>
                      <div class="post_mouth">
                        <%= link_to "口コミを投稿する", class: 'post_mouth_link' %>
                      </div>
                    </div>
                  </div>
                  <div class="review_bottom clearfix">
                    <div class="review_box">
                      <div class="user_photo">
                      </div>
                      <ul class="user_rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="score">4.5</i>
                      </ul>
                    </div>
                    <div class="review_main">
                      <div class="review_detail">
                        あいうえお あいうえお あいうえお あいうえお あいうえお あいうえお あいうえお あいうえお あいうえお あいうえお 
                      </div>
                      <div class="reviewer">
                        投稿者 : あいうえお
                      </div>
                      <div class="review_date">
                        投稿日時 : 2021/05/11
                      </div>
                      <div class="shop_reply">
                        返信する
                      </div>
                    </div>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
