<ul class="shop_menu_lists">
            <% @posts.each do |post|%>
              <li class="shop_menu_list">
                <div class="shop_menu_index_main">
                  <div class="img">
                    <%= image_tag post.photos.first.image.url %>
                  </div>
                  <div class="index_right">
                    <div class="text_box">
                      <div class="tit">
                        <%= post.title %>
                      </div>
                      <div class="price">
                        <%= post.price %>               
                      </div>
                      <div class="text">
                        <div class="text_tit">
                          コメント
                        </div>
                        <div class="text_main">
                          <%= post.caption %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="edit_box">
                    <div class="edit">
                      <%= link_to "編集",  edit_post_shop_admins_post_path(id: post), remote: true %>
                    </div>
                    <div class="delete">
                      <%= link_to "削除",  post_shop_admins_post_path(id: post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
