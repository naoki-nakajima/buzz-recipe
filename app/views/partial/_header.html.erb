<div id="glb_header">
  <%= render partial: "partial/header_top" %>
  <div id="glb_header_bottom">
    <div class="search_section">
      <ul>
        <li>
          <p>
            お気に入りのしょくどうを<br>
            つなげる、見つける
          </p>
        </li>
        <li>
          <div class="header_search">
            <%= form_with(url: search_posts_path, local: true, method: :get, class: "search_form") do |form| %>
              <%= form.text_field :keyword, placeholder: "キーワードから探す  例：オムライス  渋谷", class: "search_input" %>
              <%= form.button "検索", class: "search_btn" do %>
                <i class="fa fa-search"></i>
              <% end %>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>



