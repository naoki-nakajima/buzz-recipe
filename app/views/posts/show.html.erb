    <div id="content_container">
      <div id="show_content">
        <div class="top_photo">
        </div>
        <div class="top_content">
          <div class="left_content">
            <div class="like_content">
              <div class="like_btn">
                <div id="like-icon-post-<%= @post.id.to_s %>">
                  <%= render 'like', { post: @post } %>
                </div>
              </div>
            </div>
            <div class="shop_tit">
