<div id="glb_main">
  <div id="glb_body" class="clearfix">
    <div id="content_container">
      <div class="d-flex flex-column align-items-center pt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        投稿画面
      </div>
      <div class="card-body">
        <%= form_with model: @post, class: "upload-images p-0 border-0" do |f| %>
          <div class="form-group row mt-2">
            <div class="col-auto pr-0">
              <%= image_tag avatar_url(current_user), class: "post-profile-icon" %>
            </div>
            <div class="col pl-0">
              <%= f.text_field :caption, class: "form-control border-0", placeholder: "キャプションを書く" %>
            </div>
          </div>
          <div class="mb-3">
            <%= f.fields_for :photos do |i| %>
              <%= i.file_field :image %>
            <% end %>
          </div>
          <div class="parents">
            <%= f.fields_for :foods do |t| %>
              <%= render "food_fields", f: t %>
            <% end %>
            <div class="links">
              <%= link_to_add_association "追加", f, :foods %>
            </div>
          </div>
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
    </div>
  </div>
</div>


