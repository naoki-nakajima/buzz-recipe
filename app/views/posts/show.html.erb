          </div>
        </div>
      </section>
      <section id ="cock">
        <div class="ingredients">
          <h1>材料</h1>
          <% @post.foods.each do |food| %>
            <div class="ingredients_detail"> 
              <div class="material">
                <div class="material_detail">
                  <%= food.ingredient %>
                </div>
              </div>
              <div class="quantity">
                <div class="quantity_detail">
                  <%= food.quantity %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="how_to">
