<% if @post.liked_by(current_user).present? %>
  <%= link_to post_like_path(@post.id, @post.liked_by(current_user)), method: :DELETE, remote: true, class: "link_like" do %>
    <i class="fa fa-heart unlike_btn"></i>
  <% end %>
<% else %>
  <%= link_to post_likes_path(@post), method: :POST, remote: true, class: "link_like" do %>
    <i class="fa fa-heart like_btn" ></i>
  <% end %>
<% end %>
