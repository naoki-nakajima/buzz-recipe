                <%= form.text_field :title, class: "shop_menu_input" %>
              </li>
              <li>
                <div class="shop_menu_title">
                  商品説明
                </div>
                <%= form.text_area :title, class: "shop_menu_input" %>
              </li>
            </ul>
            <div class="shop_menu_submit">
              <%= form.submit "保存する", class: "shop_menu_btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
